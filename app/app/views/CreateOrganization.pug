doctype html
html(lang = "en")
	head
		title = title
	body
		div.container
			form(method = "POST", action = "/createOrganization")
				p Organization Name 
					input(type ="text", name = "organization")
					p #{organizationError}
				p Country:
					input(type = "text", name = "country")
				p State: 
					input(type = "text", name = "region")
				p City: 
					input(type = "text", name = "locality")
				p Company Email:
					input(type = "email", name = "email")
					p #{emailError}
				p Confirm Company Email:
					input(type = "email", name = "verifyEmail")
					p #{vEmailError}
				p 
					input(type = "submit")

			p #{errorMessage}
		
			
		if(organization)
			p  #{organization.name} #{organization.location.country} #{organization.location.region} #{organization.location.locality} #{organization.email}




