doctype html
html(lang = "en")
	head
		title = title
	body
		div.container
			form(method = "POST", action = "/createOrganization")
				p Organization Name
					input(type ="text", name = "organization" value = organization.name)
					p #{organizationError}
				p Country
					input(type = "text", name = "country" value = organization.location.country)
				p State
					input(type = "text", name = "state" value = organization.location.state)
				p City
					input(type = "text", name = "city" value = organization.location.city)
				p Company Email:
					input(type = "email", name = "email" value = organization.email)
					p #{emailError}
				p Confirm Company Email:
					input(type = "email", name = "verifyEmail" value = organization.verifyEmail)
					p #{vEmailError}
				p
					input(type = "submit")
		
			
		if(organization)
			p  #{organization.name} #{organization.location.country} #{organization.location.state} #{organization.location.city} #{organization.email}




